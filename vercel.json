{
    "version": 2,
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/server.js"
        },
        {
            "src": "/uploads/(.*)",
            "dest": "backend/server.js"
        },
        {
            "src": "/assets/(.*)",
            "dest": "/frontend/assets/$1"
        },
        {
            "src": "/favicon.svg",
            "dest": "/frontend/favicon.svg"
        },
        {
            "src": "/favicon.png",
            "dest": "/frontend/favicon.png"
        },
        {
            "src": "/vite.svg",
            "dest": "/frontend/vite.svg"
        },
        {
            "src": "/sw.js",
            "dest": "/frontend/sw.js"
        },
        {
            "src": "/manifest.json",
            "dest": "/frontend/manifest.json"
        },
        {
            "src": "/icons/(.*)",
            "dest": "/frontend/icons/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/index.html"
        }
    ]
}